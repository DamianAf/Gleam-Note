{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gleam-note",
  "version": "0.1.0",
  "identifier": "com.gleam-note.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "gleam-note",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
          {
            "plugins": {
              "dialog": {},
              "fs": {}
            },
            "identifier": "file-access",
            "permissions": [
              "core:default",
              "dialog:allow-save",
              "dialog:allow-open",
              "fs:allow-app-write"
            ],
            "allowed-paths": ["$DOCUMENT/**", "$DESKTOP/**", "$HOME/**"],
            "windows": ["main"]
          }
        ]
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
